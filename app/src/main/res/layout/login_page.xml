<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.danny.neiuber.authentication.Login">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/lPhoneNumber"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="212dp"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnLogin"
            android:background="@color/White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lPhoneNumber"
            android:layout_alignLeft="@+id/lPhoneNumber"
            android:layout_alignRight="@+id/lPhoneNumber"
            android:layout_alignStart="@+id/lPhoneNumber"
            android:layout_below="@+id/lPhoneNumber"
            android:layout_marginTop="11dp"
            android:text="Login" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
